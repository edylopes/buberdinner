{
    "editor.fontFamily": "Fira Code, monospace",
    "editor.fontLigatures": true,
    "files.exclude": {
        "**/.git": true,
        "**/.gitignore": true,
        "**/.github": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/bin": true,
        "**/obj": true,
        "**/.config": true
    },
    "files.watcherExclude": {
        "**/bin/**": true,
        "**/obj/**": true
    },
    "csharp.suppressDotnetRestoreNotification": true,
    "csharp.format.enable": true,
    "dotnet.codeLens.enableReferencesCodeLens": true,
    "sqltools.connections": [
        {
            "connectionTimeout": 15,
            "mssqlOptions": {
                "appName": "SQLTools",
                "useUTC": true,
                "encrypt": true,
                "trustServerCertificate": true
            },
            "ssh": "enable",
            "previewLimit": 50,
            "server": "localhost",
            "port": 1433,
            "driver": "MSSQL",
            "name": "Dinner",
            "database": "BuberDinner",
            "username": "sa",
            "password": "crypto123"
        }
    ],
    "sqltools.useNodeRuntime": true
}
